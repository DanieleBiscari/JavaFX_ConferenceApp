<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="conferenceapp.Registrazione.FXMLRegistrationController"
            prefHeight="524.0" prefWidth="500.0"
            style="-fx-background-color: white;">
    
    <children>
        <VBox alignment="CENTER" spacing="15"
              AnchorPane.topAnchor="25.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
            
            <children>
                <VBox spacing="10" style="-fx-border-color: black; -fx-border-radius: 15;">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <children>
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <children>
                                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputCognome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Data di nascita:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <DatePicker fx:id="inputDataNascita" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Telefono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputTelefono" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <Label text="Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <PasswordField fx:id="inputPassword" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                <Label text="Conferma Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                <PasswordField fx:id="inputPasswordConferma" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                                <Label text="Affiliazione:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputAffiliazione" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                                <Label text="Specializzazione:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                                <TextField fx:id="inputSpecializzazione" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>

                        <!-- Ruoli centrati -->
                        <HBox spacing="10" alignment="CENTER">
                            <children>
                                <Label text="Ruolo:"/>
                                <CheckBox fx:id="autoreCheckbox" text="Autore"/>
                                <CheckBox fx:id="chairCheckbox" text="Chair"/>
                                <CheckBox fx:id="mdpcCheckbox" text="Membro del PC"/>
                            </children>
                        </HBox>

                        <!-- Bottone centrato e più largo -->
                        <HBox alignment="CENTER">
                            <padding>
                                <Insets top="10" right="0" bottom="0" left="0"/>
                            </padding>
                            <children>
                                <Button fx:id="btnRegistrati"
                                        text="Registrati"
                                        onMouseClicked="#handleRegistrazione"
                                        prefWidth="200"/>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER">
                            <padding>
                                <Insets top="10" right="0" bottom="0" left="0"/>
                            </padding>
                            <children>
                                <Label fx:id="btnAccedi"
                                       text="Hai già un account? Accedi"
                                       onMouseClicked="#handleAccedi"
                                       style="-fx-underline: true; -fx-text-fill: blue; -fx-cursor: hand;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

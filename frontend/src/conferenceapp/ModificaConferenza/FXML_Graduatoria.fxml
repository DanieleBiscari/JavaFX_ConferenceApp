<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="conferenceapp.ModificaConferenza.FXML_GraduatoriaController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Graduatoria Articoli" />

    <TableView fx:id="tableGraduatoria" prefHeight="400" prefWidth="600" style="-fx-background-color: #95c8e8;">
        <columns>
            <TableColumn fx:id="colTitolo" prefWidth="250" text="Titolo" />
            <TableColumn fx:id="colPunteggio" prefWidth="80" text="Punteggio" />
            <TableColumn fx:id="colPosizione" prefWidth="80" text="Posizione" />
            <TableColumn fx:id="colEsito" prefWidth="80" text="Esito" />
            <TableColumn fx:id="colVisualizza" prefWidth="100" text="Visualizza" />
        </columns>
    </TableView>

    <!-- Bottone per inviare gli esiti -->
    <Button fx:id="btnInviaEsiti" maxWidth="150" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.3, 0, 2); -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Invia esiti">
      <font>
         <Font size="14.0" />
      </font></Button>

</VBox>

<AnchorPane prefHeight="614.0" prefWidth="518.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="conferenceapp.HomeAutore.FXML_SottomettiArticoloController">
    <children>
        <VBox alignment="CENTER" prefHeight="566.0" prefWidth="518.0" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sottometti Articolo" />

                <TextField fx:id="titoloField" promptText="Titolo" />
                <TextArea fx:id="abstractField" promptText="Abstract" />
                <TextArea fx:id="testoField" promptText="Testo dell'articolo" />
            <Button fx:id="btnAddPDF" mnemonicParsing="false" prefHeight="15.0" prefWidth="166.0" text="Inserire PDF" />

                <Button onAction="#handleInviaArticolo" style="-fx-background-color: #4CAF50; -fx-background-radius: 8;" text="Invia articolo" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            </children>
        </VBox>
      <HBox alignment="TOP_CENTER" layoutX="1.0" layoutY="572.0" prefHeight="38.0" prefWidth="129.0">
         <children>
            <Button fx:id="btnIndietro" mnemonicParsing="false" onAction="#handleIndietro" style="-fx-background-color: #ff432e; -fx-text-fill: white; -fx-background-radius: 8;" text="Indietro" />
         </children>
      </HBox>
    </children>

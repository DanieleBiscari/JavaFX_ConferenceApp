<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="conferenceapp.HomeAutore.FXML_SottomettiArticoloController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sottometti Articolo" />

                <TextField fx:id="titoloField" promptText="Titolo" />
                <TextArea fx:id="abstractField" promptText="Abstract" />
                <TextArea fx:id="testoField" promptText="Testo dell'articolo" />
                <TextField fx:id="pdfField" promptText="Nome file PDF" />
                <TextField fx:id="affiliazioneField" promptText="Affiliazione" />

                <Button onAction="#handleInviaArticolo" text="Invia articolo" wrapText="true" />
            </children>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="518.0" prefWidth="675.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="conferenceapp.HomeChair.FXML_HomeChairController">
   <children>
      <StackPane layoutX="28.0" layoutY="23.0">
         <children>
            <Pane prefHeight="471.0" prefWidth="618.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.3, 0, 2);">
               <children>
                  
                  <!-- Titolo sezione -->
                  <Label layoutX="40.0" layoutY="20.0" text="Home Chair">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  
                  <!-- Bottone crea nuova conferenza -->
                  <HBox alignment="CENTER" layoutX="70.0" layoutY="60.0" prefHeight="100.0" prefWidth="478.0">
                     <children>
                        <Button fx:id="btnCreaNuovaConf" mnemonicParsing="false" onMouseClicked="#handleCreaNewConf"
                                prefHeight="60.0" prefWidth="300.0"
                                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <text>Crea nuova conferenza</text>
                        </Button>
                     </children>
                  </HBox>

                  <!-- Etichetta sopra la tabella -->
                  <Label layoutX="40.0" layoutY="160.0" text="Conferenze attive">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>

                  <!-- Scroll con tabella conferenze -->
                  <ScrollPane layoutX="40.0" layoutY="190.0" prefHeight="201.0" prefWidth="540.0"
                              style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="520.0">
                           <children>
                              <TableView fx:id="tableConferenze" layoutX="0.0" prefHeight="200.0" prefWidth="520.0">
                                 <columns>
                                    <TableColumn fx:id="colTitolo" prefWidth="173.0" text="Titolo" />
                                    <TableColumn fx:id="colData" prefWidth="173.0" text="Data" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>

                  <!-- Bottone gestione profilo -->
                  <HBox alignment="CENTER" layoutX="180.0" layoutY="410.0" prefHeight="50.0" prefWidth="260.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8;"
                                text="Gestisci profilo">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>

                  <!-- Logout -->
                  <Label fx:id="btnLogoutHomeChair" layoutX="275.0" layoutY="460.0" alignment="CENTER"
                         onMouseClicked="#handleLogout" prefHeight="17.0" prefWidth="63.0"
                         style="-fx-underline: true; -fx-text-fill: red; -fx-cursor: hand;" text="Logout">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>

               </children>
            </Pane>
         </children>
      </StackPane>
   </children>
</AnchorPane>

